/* weather.wxss */
.container {
  min-height: 100vh;
  background: #F8F9FA;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}

.card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  text-align: center;
  margin-bottom: 24rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 48rpx;
}

.input-section {
  margin-bottom: 48rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.required {
  color: #FF4D4F;
  margin-left: 4rpx;
}

.city-input {
  width: 100%;
  height: 88rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.input-placeholder {
  color: #999999;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #6B7B8E;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

/* 结果展示样式 */
.result-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.weather-image {
  width: 100%;
  height: auto;
  display: block;
}

.weather-poem {
  font-size: 36rpx;
  color: #333333;
  text-align: center;
  padding: 40rpx 32rpx;
  line-height: 1.6;
  font-weight: 500;
}

.weather-info {
  padding: 0 32rpx 32rpx;
}

.city-name {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.date-info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.temp-info {
  font-size: 28rpx;
  color: #666666;
}

.modify-btn {
  width: 100%;
  height: 88rpx;
  background: #F5F5F5;
  color: #333333;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-top: 2rpx solid #EEEEEE;
}

.modify-btn:active {
  background: #EEEEEE;
} 