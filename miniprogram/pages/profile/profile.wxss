/* profile.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

.profile-card {
  background: linear-gradient(135deg, #3B82F6, #8B5CF6);
  padding: 48rpx 32rpx;
  margin-bottom: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.info-right {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  color: white;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.menu-list {
  padding: 0 32rpx;
}

.menu-group {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  position: relative;
}

.menu-item:not(:last-child) {
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.menu-item:active {
  background: #f5f5f5;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 36rpx;
}

.footer {
  text-align: center;
  padding: 48rpx 0;
}

.version {
  font-size: 24rpx;
  color: #999;
} 